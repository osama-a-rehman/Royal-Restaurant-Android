<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_activty"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="osama.ned.royalrestaurant.Activities.SelectActivity"
    android:background="@drawable/blurred_fries">

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:layout_marginTop="30dp"
        android:src="@drawable/edited_main_logo" />

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_select_activity"
            android:layout_alignParentBottom="true"
            android:fontFamily="sans-serif"
            android:text="@string/btn_signup"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/btn_select_activity"
            android:fontFamily="sans-serif"
            android:layout_above="@id/btnSignUp"
            android:text="@string/btn_signin"
            android:textColor="#FFFFFF"
            android:textSize="26sp"
            android:textStyle="bold" />

</RelativeLayout>